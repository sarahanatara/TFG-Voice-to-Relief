{
  "model": {
    "base_model": "openai/whisper-small",
    "language": "multilingual",
    "task": "transcribe",
    "forced_decoder_ids": null
  },
  "lora": {
    "r": 16,
    "lora_alpha": 32,
    "lora_dropout": 0.05,
    "target_modules": ["q_proj", "v_proj", "k_proj", "out_proj", "fc1", "fc2"],
    "bias": "none"
  },
  "training": {
    "num_train_epochs": 5,
    "per_device_train_batch_size": 4,
    "per_device_eval_batch_size": 4,
    "gradient_accumulation_steps": 2,
    "warmup_steps": 100,
    "learning_rate": 1e-4,
    "weight_decay": 0.01,
    "lr_scheduler_type": "cosine",
    "eval_steps": 200,
    "save_steps": 500,
    "logging_steps": 50,
    "max_grad_norm": 1.0,
    "dataloader_pin_memory": false,
    "dataloader_num_workers": 2
  },
  "data": {
    "max_duration": 10.0,
    "min_duration": 1.0,
    "sampling_rate": 16000,
    "num_proc": 4
  },
  "early_stopping": {
    "patience": 3,
    "threshold": 0.01
  },
  "output": {
    "output_dir": "models/whisper-lora",
    "logging_dir": "logs",
    "save_total_limit": 3,
    "push_to_hub": false
  }
}